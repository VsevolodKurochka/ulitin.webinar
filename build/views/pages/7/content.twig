{% import "macros/macros.form.twig" as macrosForm %}
<section class="landing">
	<div class="landing__image">
		<img src="img/bg-7.jpg" alt="">
	</div>
	<div class="landing__content">
		<div class="landing__header">
			<img src="img/logo-7.png" alt="Logo" class="landing__header-logo">
			<p class="landing__header-date">17 сентября 2018 / 20:00</p>
		</div>
		<div class="landing__body">
			<h1 class="landing__body-title">Почему я живу по<br>
			сценарию и мои<br>
			отношения<br>
			с мужчинами<br>
			краткосрочны??</h1>
			<p class="landing__body-subtitle">Зарегистрируйтесь на <span class="b color-brand-7">бесплатный</span> онлайн вебинар</p>
			<form action="#" class="form form_block" method="POST">
				<div class="form__content">
					{% for input in form %}
						<div class="form__row">
							<label for="{{input.name}}" class="form__label">{{input.label}}</label>
							{{ macrosForm.input(input.name, input.value, input.type, input.attributes) }}
						</div>
					{% endfor %}
					<div class="form__row">
						{{ macrosForm.button('submit', 'form__submit btn btn_lg btn_brand-7 effect effect_bounce-top', 'Зарегистрироваться') }}
					</div>
				</div>
			</form>
		</div>
	</div>
	
</section>